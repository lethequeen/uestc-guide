.login
	border: 1px solid $theme-box-border-color
	font-size: 0
	.input
		width: 100%
		line-height: 2
		border: 0
		outline: 0
		text-indent: 10px
	p:first-child
		border-bottom: 1px dashed $theme-box-border-color
	a.btn
		position: relative
		display: inline-block
		width: 50%
		padding: 8px 10px
		font-size: 1rem
		box-sizing: border-box
		text-align: center
		background-color: $theme-box-border-color
		cursor: pointer
		&:hover
			color: $theme-main-color
		&:first-child:after
			position: absolute
			content: ''
			top: 0
			right: 0
			bottom: 0
			width: 1px
			background-color: lighten($theme-box-border-color, 30%)